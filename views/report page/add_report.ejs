<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>طباعة طلب الإضافة</title>
</head>
<link href="/assets/css/report.css" rel="stylesheet" id="bootstrap-css">
<div class="col-md-12">   
    <div class="row">
           
           <div class="receipt-main col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
              
                   
                       
                          
                <table>
                    <tr>
                        <td><img src="/assets/img/logo.jpg" alt="MGDC" height="150"/></td>
                        <td><div  style="width:50px"></div></td>
                        <td bgcolor="white" style="width:100%;"><center><h2 >إدارة الخدمات المساعدة - (طلب إضـــافة رقم <%- JSON.stringify(adds[0].AddSummary_id) %>)</h2></center></td>

                    </tr>
                    </table>
                <hr>
                          
               
               <div>
                   <table class="table table-bordered">
                       <thead>
                           <tr>
                               <th>Id</th>
                               <th>مسئول الخدمات</th>
                               <th>الموّرد</th>
                               <th>الصنف</th>
                               <th>الكمية المصروفة</th>
                               <th>التاريخ</th>

                           </tr>
                       </thead>
                       <tbody id="reportData"> </tbody>
                   </table>
               </div>

               <div style="height: 100;"></div>


               <div class="row">
                   <div class="receipt-header receipt-header-mid receipt-footer">
                       <div class="col-xs-8 col-sm-8 col-md-8 text-left">
                           <div class="receipt-right">
                               <div id="wrapper">
                                <p><b id='date-time'>التاريخ/ الوقت :   </b></p>
                                <div id="div1" style="padding: 10px;">
                                    <h3><strong>توقيع مسئول الخدمات: </strong></h3>........................
                                </div>
                                <div id="div2" style="padding: 10px;">
                                    <h3><strong>توقيع المستلم: </strong></h3>........................
                                </div>
                               </div>

                           </div>
                       </div>
                       <div class="col-xs-4 col-sm-4 col-md-4">
                       </div>
                   </div>
               </div>
               
           </div>    
       </div>
   </div>

   <script>
    var dt = new Date();
    document.getElementById('date-time').innerHTML= document.getElementById('date-time').innerHTML + dt;
    data= <%- JSON.stringify(adds) %>;
    console.log(data);
    var table = document.getElementById("reportData");
    table.innerHTML="";
    var tr="";
    data.forEach(x=>{
        var d = new Date(x.Add_time)
        d = d.toLocaleDateString('en-US', {year: 'numeric', month: 'short', day: 'numeric'})
        tr+='<tr>';
        tr+='<td><h3><center>' + x.Add_id +'</center></h3></td>'
            +'<td><h3><center>'+ x.Employee_name +'</center></h3></td>'
            +'<td><h3><center>'+ x.Holder_name +'</center></h3></td>'
            +'<td><h3><center>'+ x.Brand_name +'</center></h3></td>'
            +'<td><h3><center>'+ x.Add_quantity +'</center></h3></td>'
            +'<td><h3><center>'+ d +'</center></h3></td>';

        tr+='</tr>'

    })
    table.innerHTML+=tr;
    </script>