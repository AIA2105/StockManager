   <script>
    var dt = new Date();
    document.getElementById('date-time').innerHTML= document.getElementById('date-time').innerHTML + dt;
    data= <%- JSON.stringify(brands) %>;
    console.log(<%- JSON.stringify(brands) %>);

    var table = document.getElementById("reportData");
    table.innerHTML="";
    var tr="";
    data.forEach(x=>{
        tr+='<tr>';
        tr+='<td><h3><center>' + x.Brand_id +'</center></h3></td>'
            +'<td><h3><center>'+ x.Brand_Name +'</center></h3></td>'
            +'<td><h3><center>'+ x.Now_quantity +'</center></h3></td>'
            +'<td><h3><center>'+ x.requests +'</center></h3></td>'
            +'<td><h3><center>'+ x.adds +'</center></h3></td>'
            +'<td><h3><center>'+ x.dues +'</center></h3></td>'
            +'<td><h3><center>'+ x.needs +'</center></h3></td>';



        tr+='</tr>'

    })
    table.innerHTML+=tr;

    </script>